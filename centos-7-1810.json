{
  "builders": [{
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": false,

    "guest_os_type": "RedHat_64",
    "disk_size": 100960,

    "iso_url": "http://mirrors.mit.edu/centos/7.6.1810/isos/x86_64/CentOS-7-x86_64-Minimal-1810.iso",
    "iso_checksum_url": "http://mirrors.mit.edu/centos/7.6.1810/isos/x86_64/sha256sum.txt",
    "iso_checksum_type": "sha256",

    "boot_command": [
      "<tab> net.ifnames=0 biosdevname=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.0-x86_64/ks.cfg<enter><wait>"
    ],
    "boot_wait": "12s",

    "http_directory": "http",
    "guest_additions_url": "http://download.virtualbox.org/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
    "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],

    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p"
  }],
  "post-processors": [{
    "output": "build/centos-7-1810-x86_64.box",
    "type": "vagrant",
    "only": ["virtualbox-iso"]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "scripts/vagrant.sh",
      "scripts/vboxguest.sh",
      "scripts/centos_7_x_network.sh",
      "scripts/compact.sh"
    ]
  }]
}
